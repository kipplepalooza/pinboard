{
    "manifest_version": 2,
    "name": "Pinboard",
    "version": "2.0",
    "description": "A toolbar button for the Pinboard bookmarking service (http://pinboard.in).",
    "icons": {
		"64": "icon_64.png",
        "128": "icon_128.png"
    },
    "background": {
		"scripts": [
			"jquery-1.8.3.min.js",
			"settings.js",
			"background.js"
		]
    },
    "content_scripts": [{
    	"matches": ["http://*/*", "https://*/*"],
    	"run_at": "document_start",
    	"js": ["selection.js"],
    	"all_frames": true
    }],
    "browser_action": {
        "default_icon": "icon_19_light.png",
        "default_title": "Pinboard",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "permissions": [
        "tabs",
        "notifications",
        "http://*/*",
        "https://*/*"
    ],
    "web_accessible_resources": [
        "icon_19_dark.png",
        "icon_19_light.png",
        "icon_48.png",
        "icon_64.png",
        "icon_128.png",
        "info_16.png",
        "jquery-1.8.3.min.js",
        "jquery-ui-1.9.2.custom.min.js",
        "options.js",
		"popup.js",
		"settings.js",
		"star_12_blue.png",
        "star_12_gray.png"
    ],
    "commands": {
    	"savebookmark": {
	    	"suggested_key": {
		    	"default": "Ctrl+Shift+K",
		    	"mac": "Command+Shift+K"
		    },
		    "description": "Save Bookmark"
		},
		"readlater": {
	    	"suggested_key": {
		    	"default": "Ctrl+Shift+L",
		    	"mac": "Command+Shift+L"
		    },
		    "description": "Read Later"
		}
	}
}
