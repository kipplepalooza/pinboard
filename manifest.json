{
   "name": "Pinboard",
   "version": "1.0.8",
   "description": "A toolbar button for the excellent Pinboard (http://pinboard.in) bookmarking service.",   
   "icons": {
      "128": "icon_128.png"
   },
   "browser_action": {
      "default_icon": "icon.png",
      "default_title": "Pinboard",
      "popup": "popup.html"
   },   
   "options_page": "options.html",
   "permissions": [ "tabs",
      "chrome://favicon/",
      "http://*/*", 
      "https://*/*"
   ],
   "content_scripts": [ 
      { "matches": ["http://*/*"],
        "js": ["selection.js"],
        "run_at": "document_start",
        "all_frames": true
      }
   ]
}
